
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<environment names="Development">
    <link href="~/view-resources/Views/_Bundles/calendar.css" type="text/css" rel="stylesheet" asp-append-version="true" />
</environment>

<environment names="Staging,Production">
    <link href="~/view-resources/Views/_Bundles/calendar.min.css" type="text/css" rel="stylesheet" asp-append-version="true" />
</environment>
<div style="background-color: white">
    <div class="table-Or-list_doc">
        <div class="table-body doc">
            <div class="table-row doc" ng-repeat="q in data">
                <div class="table-cell doc header">
                    <div class="box-flex_doc_row">
                        <input type="checkbox" class="star padding5px" ng-model="q.important" />
                        <div class="marginleft5px">
                            <span class="content-pdf-doc">{{q.content}}</span>
                            <div class="box-flex_doc_row">
                                <a href="/Upload/{{q.url}}" class="box-flex_a-doc">
                                    <i class="material-icons icon-pdf-upload">picture_as_pdf</i>
                                    <span class="file-name-upload">{{q.url}}</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-cell doc left" >
                    <div class="notification-doc">
                        @*<i class="icon ion-android-notifications" style="font-size: 23px;"></i>*@
                        <i class="material-icons" style="font-size:23px;">notifications</i>
                        <span>{{q.notifications}}</span>
                    </div>
                </div>
                <div class="table-cell doc right">
                    <div class="notification-doc">
                        <i class="material-icons">date_range</i>
                        <span>{{q.createDate}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <environment names="Development">
        <script src="~/angular/document_ctrl.js" asp-append-version="true"></script>
        <script src="~/js/aeDashboard.js" language="javascript" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/calendar-view.js" language="javascript" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/CalendarView/document_ctrl.min.js" asp-append-version="true"></script>
    </environment>
}
