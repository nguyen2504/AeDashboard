@model AeDashboard.Web.Models.Calendar.CalendarViewModel
@{ var now = DateTime.Today.ToString("yyyy-MM-dd") + "T" + DateTime.Now.ToString("s");}
<form asp-action="Create" asp-controller="Calendar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="BeginDate" class="form-label"></label>
            @*<input type="datetime" id="BeginDate" 
             value="2018-06-12T19:33"
                   min="2018-06-07T00:00" max="2018-06-14T00:00" name="BeginDate" required class="form-control">*@
            <input asp-for="BeginDate" value="@DateTime.Now.ToString("s")"  required class="form-control" type="datetime-local" />
            <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control"  value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            <span asp-validation-for="EndDate" class="text-danger" ></span>
        </div>
    </div>

    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Admin" class="form-label"></label>
            <input asp-for="Admin" class="form-control" />
            <span asp-validation-for="Admin" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Work" class="form-label"></label>
            <input asp-for="Work" class="form-control" />
            <span asp-validation-for="Work" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Users" class="form-label"></label>
            <input asp-for="Users" class="form-control" />
            <span asp-validation-for="Users" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Place" class="form-label"></label>
            <input asp-for="Place" class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
      
    </div>
    <!-- Modal footer -->
    <div class="modal-footer">
      
        <input type="submit" value="Create" class="btn btn-default" />
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>

</form>

