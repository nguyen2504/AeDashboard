@model AeDashboard.Calendar.Dto.CalendarViewDto

<form asp-action="Create" asp-controller="Calendar" role="form"  class="form-validation" autocomplete="on" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Admin" class="form-label" style="top: -15px" ></label>
            <input   class="form-control magicsearch name-admin-create validate"   />
            <div  style="display: none">
                <input asp-for="Admin"  class="form-control " required/>
                <input asp-for="IdAdmins"  class="form-control " />
            </div>
          
            <span asp-validation-for="Admin" class="text-danger"></span>
        </div>
    </div>
   
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Work" class="form-label"></label>
            <textarea rows="3" cols="50" asp-for="Work"  class="form-control validate"></textarea>
            <span asp-validation-for="Work" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Users" class="form-label"  style="top: -15px"></label>
            <input  class="form-control name-admin-user" required/>
            <div style="display: none">
                <input asp-for="Users"  class="form-control " required/>
                <input asp-for="IdUsers"  class="form-control " />
            </div>
           
            <span asp-validation-for="Users" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="Place" class="form-label"></label>
            <input asp-for="Place" class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="BeginDate" class="form-label"></label>
            <input asp-for="BeginDate" value="@DateTime.Now.ToString("s")" required class="form-control" type="datetime-local" />
            <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        <input type="submit" value="Create" class="btn btn-default"  />
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </div>

</form>
<script src="~/css/tag/jquery.magicsearch.js" type="text/javascript"></script>
<link  href="~/css/tag/jquery.magicsearch.css" rel="stylesheet"/>


