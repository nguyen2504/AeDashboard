@using Abp.Extensions
@model AeDashboard.Calendar.CalendarView
@{
    Layout = null;
}

<form asp-action="Edit" asp-controller="Calendar" role="form" novalidate class="form-validation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-float" style="display: none">
        <div class="form-line focused">
         
            <label asp-for="Id" class="form-label"></label>
            <input asp-for="Id" required class="form-control" />
            @*<span asp-validation-for="BeginDate" class="text-danger"></span>*@
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line focused">
            <label asp-for="Admin" class="form-label"></label>
            <input asp-for="Admin" class="form-control" />
            <span asp-validation-for="Admin" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line focused">
            <label asp-for="Work" class="form-label"></label>
            <textarea rows="5" cols="50" asp-for="Work" required class="form-control"></textarea>
            <span asp-validation-for="Work" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line focused">
            <label asp-for="Users" class="form-label"></label>
            <input asp-for="Users" class="form-control" />
            <span asp-validation-for="Users" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line focused">
            <label asp-for="Place" class="form-label"></label>
            <input asp-for="Place" required class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-float">
        <div class="form-line focused">
         <label asp-for="BeginDate" class="form-label"></label>
            <input asp-for="BeginDate" required class="form-control" type="datetime-local"/>
            <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
    </div>
   
    <div class="form-group form-float">
        <div class="form-line focused">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

 

    <div class="form-group">

    </div>
    <!-- Modal footer -->
    <div class="modal-footer">
        <button type="submit" asp-controller="Calendar" asp-action="Delete" asp-route-id="@Model.Id"  class="btn btn-danger waves-effect" >Delete</button>
        <input type="submit" value="Save" class="btn btn-info waves-effect" />
        <button type="button" class="btn btn-warning waves-effect" data-dismiss="modal">Close</button>
    </div>

</form>
